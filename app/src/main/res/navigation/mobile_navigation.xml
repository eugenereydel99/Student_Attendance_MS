<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/profileFragment">
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.student_attendance_ms.main.profile.ProfileFragment"
        android:label="Профиль"
        tools:layout="@layout/fragment_user_profile" />
    <fragment
        android:id="@+id/attendanceFragment"
        android:name="com.example.student_attendance_ms.main.methods.AttendanceFragment"
        android:label="Контроль посещаемости"
        tools:layout="@layout/fragment_attendance" />
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.student_attendance_ms.main.schedule.base.ScheduleFragment"
        android:label="Календарь"
        tools:layout="@layout/fragment_schedule" >
        <action
            android:id="@+id/action_scheduleFragment_to_attendanceEntryFragment"
            app:destination="@id/attendanceEntryFragment" />
    </fragment>
    <fragment
        android:id="@+id/attendanceEntryFragment"
        android:name="com.example.student_attendance_ms.main.schedule.subscription.AttendanceEntryFragment"
        android:label="AttendanceEntryFragment"
        tools:layout="@layout/fragment_attendace_entry"
        />
</navigation>
