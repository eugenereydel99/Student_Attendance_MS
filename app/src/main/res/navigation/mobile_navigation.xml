<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.student_attendance_ms.main.profile.UserProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_user_profile"
        />

    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.student_attendance_ms.main.schedule.detail.EventDetailFragment"
        android:label="@string/event_members_text"
        tools:layout="@layout/fragment_event_detail" >
        <argument
            android:name="eventId"
            app:argType="integer" />
        <action
            android:id="@+id/action_eventDetailFragment_to_scannerFragment"
            app:destination="@id/scannerFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.example.student_attendance_ms.main.schedule.base.ScheduleFragment"
        android:label="@string/title_schedule"
        tools:layout="@layout/fragment_schedule" >

        <action
            android:id="@+id/action_scheduleFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/scannerFragment"
        android:name="com.example.student_attendance_ms.main.schedule.attendance.ScannerFragment"
        android:label="@string/attendance_label"
        tools:layout="@layout/fragment_scanner">
        <argument
            android:name="eventId"
            app:argType="integer" />
    </fragment>

</navigation>
