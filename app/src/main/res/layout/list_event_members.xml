<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="eventMember"
            type="com.example.student_attendance_ms.network.model.EventMember" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:paddingVertical="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/event_member_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_account_circle_black_24dp"
                app:civ_border_color="#EEE"
                app:civ_border_width="2dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/event_member_fio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/event_member_photo"
                android:layout_marginHorizontal="10dp"
                android:layout_toEndOf="@id/event_member_photo"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:text="@{eventMember.secondName + ' ' + eventMember.firstName + ' ' + eventMember.lastName}"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="Рейдель Евгений Викторович" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/user_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/event_member_photo"
                android:layout_marginHorizontal="10dp"
                android:layout_toEndOf="@id/event_member_photo"
                android:fontFamily="@font/roboto"
                android:text="@{eventMember.group == null ? @string/creator : @string/group(eventMember.group)}"
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                tools:text="группа 737-1" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>